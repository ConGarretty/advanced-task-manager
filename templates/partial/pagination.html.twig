<div class="mt-4 flex justify-between">
    {% if taskData.pagination.hasPrevious %}
        <a href="{{ path("task-index", {
            "page": taskData.pagination.currentPage - 1,
            "sort": taskData.pagination.sort,
            "direction": taskData.pagination.direction
        }) }}" class="bg-gray-300 px-4 py-2 rounded">Previous</a>
    {% else %}
        <span class="bg-gray-300 px-4 py-2 rounded opacity-50 cursor-not-allowed">Previous</span>
    {% endif %}
    {% if taskData.pagination.hasNext %}
        <a href="{{ path("task-index", {
            "page": taskData.pagination.currentPage + 1,
            "sort": taskData.pagination.sort,
            "direction": taskData.pagination.direction
        }) }}" class="bg-gray-300 px-4 py-2 rounded">Next</a>
    {% else %}
        <span class="bg-gray-300 px-4 py-2 rounded opacity-50 cursor-not-allowed">Next</span>
    {% endif %}
</div>